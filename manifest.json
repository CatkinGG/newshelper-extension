{
  "manifest_version": 2,

  "name": "新聞小幫手",
  "description": "協助您判別含有誤導資訊的新聞",
  "version": "1.0",

  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "content_scripts" : [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "jquery-2.0.3.min.js",
        "content_script.js"
      ],
      "run_at" : "document_idle",
      "all_frames" : true
    }
  ]
}
